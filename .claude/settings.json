{
  "model": "claude-sonnet-4-5-20250929",
  "permissions": {
    "allow": [
      "Task(*)",
      "Write(*)",
      "Edit(*)",
      "Read(*)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(pnpm *)",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(mkdir *)",
      "Bash(ls *)",
      "Bash(pwd)",
      "Bash(find *)",
      "WebFetch(*)",
      "WebSearch(*)",
      "Glob(*)",
      "Grep(*)"
    ],
    "deny": [
      "Read(.env*)",
      "Write(.env*)",
      "Edit(.env*)",
      "Bash(rm *)",
      "Bash(rmdir *)",
      "Bash(sudo *)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "condition": "path.endsWith('.ts') || path.endsWith('.tsx')",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsc --noEmit \"$CLAUDE_FILE_PATHS\" 2>/dev/null || echo '⚠️  TypeScript 타입 체크가 필요합니다'"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "condition": "path.includes('prisma/schema.prisma')",
        "hooks": [
          {
            "type": "command",
            "command": "npx prisma format || echo '⚠️  Prisma schema 포매팅 필요'"
          }
        ]
      }
    ],
    "PreBashCommand": [
      {
        "matcher": "git commit *",
        "hooks": [
          {
            "type": "command",
            "command": "git status --porcelain | wc -l | xargs -I {} test {} -gt 0 || (echo '❌ 커밋할 변경사항이 없습니다' && exit 1)"
          }
        ]
      }
    ]
  },
  "agent_coordination": {
    "build_command_agents": [
      "git-agent",
      "requirements-agent",
      "design-agent",
      "docs-agent",
      "builder-agent"
    ],
    "parallel_execution": {
      "analysis_phase": ["requirements-agent", "design-agent", "docs-agent"],
      "implementation_phase": ["builder-agent", "git-agent"]
    }
  },
  "project_context": {
    "name": "고뮤니티",
    "type": "social_commerce_pwa",
    "tech_stack": {
      "frontend": "Next.js 14+ App Router",
      "backend": "Next.js Server Actions",
      "database": "Supabase + Prisma",
      "ui": "Radix UI + Tailwind CSS",
      "pwa": "next-pwa",
      "di": "TSyringe",
      "deployment": "Vercel"
    },
    "language": "Korean",
    "git_workflow": "trunk_based_with_korean_commits"
  }
}